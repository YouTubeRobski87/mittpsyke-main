---
layout: layouts/base.njk
---

<main class="page">
  <div class="container page-header">
    <h1>{{ title }}</h1>
    {% if subtitle %}
      <p class="subtitle">{{ subtitle }}</p>
    {% endif %}
  </div>

  <div class="container">
    <div class="page-content{% if fullWidth %} page-content--wide{% endif %}">
      {{ content | safe }}
    </div>
  </div>
</main>
